pipeline {
    agent any
    
    stages {
        stage ('Git Checkout') {
          steps {
              git credentialsId: '630fba4e-fb03-4484-b58e-f37054e7215a', url: 'https://github.com/zaval13/Terraform-AWS'
          }
       }
        stage('Run Ansible playbook') {
            steps {
              dir('./Ansible') {
                sh 'ansible-playbook -vvv docker-jenkins.yml'
            }
          }
        }
        
    }
}
