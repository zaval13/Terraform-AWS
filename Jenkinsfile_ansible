        stage ('Git Checkout') {
          steps {
              git credentialsId: '2d6bc20a-2088-4b87-ae94-ae51d3934d10', url: 'https://github.com/zaval13/Terraform-AWS'
          }
       }
        stage('Run Ansible playbook') {
